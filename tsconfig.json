{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": false,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "alwaysStrict": true,
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "DOM"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
